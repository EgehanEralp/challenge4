<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/kul1skor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="56dp"
        android:text="1.Kullanıcı :0" />

    <TextView
        android:id="@+id/kul2skor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/kul1skor"
        android:layout_below="@+id/kul1skor"
        android:text="2.Kullanıcı :0" />

    <Button
        android:id="@+id/buttonReset1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/kul1skor"
        android:layout_marginEnd="73dp"
        android:text="RESET" />

    <Button
        android:id="@+id/buttonTas1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/kul1skor"
        android:layout_marginTop="200dp"
        android:text="TAŞ" />

    <Button
        android:id="@+id/buttonKagit1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonTas1"
        android:layout_centerHorizontal="true"
        android:text="KAĞIT" />

    <Button
        android:id="@+id/buttonMakas1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/buttonTas1"
        android:layout_marginEnd="44dp"
        android:text="MAKAS" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="178dp"
        android:text="SON KAZANAN"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="153dp"
        android:text="--------------"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/kazanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-153dp"
        android:textSize="16sp"
        android:textStyle="bold|italic" />
</RelativeLayout>